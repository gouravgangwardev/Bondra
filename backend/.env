# ============================================
# FILE 1: .env.example
# ============================================
# Random Chat Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=random_chat
DB_USER=postgres
DB_PASSWORD='He12345'

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# ============================================
# JWT Authentication
# Generate secure secrets with: openssl rand -base64 32
# ============================================
JWT_SECRET=your-jwt-secret-key-min-32-characters-long-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-min-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================
# Security
# ============================================
BCRYPT_ROUNDS=12
ENABLE_HELMET=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# WebSocket
# ============================================
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_BUFFER_SIZE=1000000

# ============================================
# Session Management
# ============================================
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000

# ============================================
# Queue Configuration
# ============================================
QUEUE_MATCH_TIMEOUT=30000
QUEUE_CLEANUP_INTERVAL=60000

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# Monitoring & Metrics
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# File Upload (Future)
# ============================================
MAX_FILE_SIZE=5242880

# ============================================
# Feature Flags
# ============================================
ENABLE_FRIEND_SYSTEM=true
ENABLE_REPORTING=true
ENABLE_GUEST_MODE=true
# ============================================
# External Services (Optional)
# ============================================
#TURN_SERVER_URL=
#TURN_SERVER_USERNAME=
#TURN_SERVER_CREDENTIAL=

#SENTRY_DSN=

