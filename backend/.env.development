# Development Environment Configuration

NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=random_chat_dev
DB_USER=postgres
DB_PASSWORD='He12345'

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# JWT (Use weak secrets for development only!)
JWT_SECRET=dev-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# CORS - Allow all in development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Security - Relaxed for development
BCRYPT_ROUNDS=10
ENABLE_HELMET=false

# Rate Limiting - Relaxed for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# WebSocket
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_BUFFER_SIZE=10000000

# Session
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000

# Queue
QUEUE_MATCH_TIMEOUT=30000
QUEUE_CLEANUP_INTERVAL=60000

# Logging - Verbose in development
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_FRIEND_SYSTEM=true
ENABLE_REPORTING=true
ENABLE_GUEST_MODE=true
