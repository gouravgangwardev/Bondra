# ============================================
# FILE 3: .env.production
# ============================================
# Production Environment Configuration
# IMPORTANT: Change all secrets before deploying!

NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=random_chat
DB_USER=postgres
DB_PASSWORD='He12345'

# Redis
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=

# JWT - MUST CHANGE THESE!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_32_CHAR_SECRET
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_SECURE_32_CHAR_REFRESH_SECRET
JWT_REFRESH_EXPIRES_IN=30d

# CORS - Set to your domain
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Security
BCRYPT_ROUNDS=12
ENABLE_HELMET=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_BUFFER_SIZE=1000000

# Session
SESSION_TIMEOUT=3600000
SESSION_CLEANUP_INTERVAL=300000

# Queue
QUEUE_MATCH_TIMEOUT=30000
QUEUE_CLEANUP_INTERVAL=60000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_FRIEND_SYSTEM=true
ENABLE_REPORTING=true
ENABLE_GUEST_MODE=true

# External Services
#TURN_SERVER_URL=
#TURN_SERVER_USERNAME=
#TURN_SERVER_CREDENTIAL=

#SENTRY_DSN=