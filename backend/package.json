{
  "name": "random-chat-backend",
  "version": "1.0.0",
  "description": "Production-ready random video/audio/text chat backend with WebSocket support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "start:cluster": "NODE_ENV=production pm2 start ecosystem.config.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "migrate:up": "ts-node src/database/migrate.ts up",
    "migrate:down": "ts-node src/database/migrate.ts down",
    "migrate:reset": "ts-node src/database/migrate.ts reset",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "seed": "ts-node src/database/seed.ts run",
    "seed:clear": "ts-node src/database/seed.ts clear",
    "db:setup": "./scripts/db-setup.sh",
    "docker:build": "./docker/build.sh",
    "docker:start": "./docker/start.sh development",
    "docker:stop": "./docker/stop.sh development",
    "docker:logs": "./docker/logs.sh development",
    "docker:prod": "./docker/start.sh production",
    "clean": "rm -rf dist coverage .nyc_output"
  },
  "keywords": [
    "chat",
    "webrtc",
    "websocket",
    "random-chat",
    "video-chat",
    "audio-chat",
    "real-time",
    "socket.io",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/random-chat-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/random-chat-backend/issues"
  },
  "homepage": "https://github.com/yourusername/random-chat-backend#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "prom-client": "^15.1.2",
    "rate-limit-redis": "^4.2.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "pm2": "^5.4.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
